{
  "manifest_version": 3,
  "name": "GCH Work Timer",
  "version": "1.0.0",
  "description": "Track active time on GCH complaint pages (idle > 5 minutes ignored).",
  "permissions": ["storage"],
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["https://crm.medtronic.com/*"],
      "all_frames": true,
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
